package Matematic;

public class MatematikaCanggih extends Matematika{
  public String pertambahan(double a, double b, double c) {
        double hasil = a + b + c;
        return konversiKePecahan(hasil);
    }

    
    public String pengurangan(double a, double b, double c) {
        double hasil = a - b - c;
        return konversiKePecahan(hasil);
    }


    public String perkalian(double a, double b, double c) {
        double hasil = a * b * c;
        return konversiKePecahan(hasil);
    }


    public String pembagian(double a, double b, double c) {
        if (b != 0 && c != 0) {
            double hasil = a / b / c;
            return konversiKePecahan(hasil);
        } else {
            return "Pembagian dengan nol tidak dapat dilakukan";
        }
    }


    public String modulus(double a, double b, double c) {
        double hasil = (a % b) % c;
        return konversiKePecahan(hasil);
    }  
}
